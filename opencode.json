{
	"$schema": "https://opencode.ai/config.json",
	"mcp": {
		"context7": {
			"type": "local",
			"command": ["npx", "-y", "@upstash/context7-mcp"],
			"enabled": true,
			"environment": {}
		},
		"convex": {
			"type": "local",
			"command": ["npx", "-y", "convex@latest", "mcp", "start"],
			"enabled": true,
			"environment": {}
		},
		"shadcn": {
			"type": "local",
			"command": ["npx", "-y", "shadcn@latest", "mcp"],
			"enabled": true,
			"environment": {}
		},
		"better-auth": {
			"type": "remote",
			"url": "https://mcp.inkeep.com/better-auth/mcp",
			"enabled": true
		}
	}
}
