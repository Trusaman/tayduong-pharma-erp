{
	"mcpServers": {
		"context7": {
			"command": "npx",
			"args": ["-y", "@upstash/context7-mcp"]
		},
		"convex": {
			"command": "npx",
			"args": ["-y", "convex@latest", "mcp", "start"]
		},
		"shadcn": {
			"command": "npx",
			"args": ["-y", "shadcn@latest", "mcp"]
		},
		"better-auth": {
			"type": "http",
			"url": "https://mcp.inkeep.com/better-auth/mcp"
		}
	}
}
